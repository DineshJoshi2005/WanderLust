
    <%layout("/layouts/boilerplate.ejs")%>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="row">
            <div class="col-8 offset-2 ">
                <div class="mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" class="form-control" type="text">
                </div>
                <div class="mt-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" type="text"><%= listing.description %></textarea>
                </div>
                
                <div class="mt-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" class="form-control" value="<%= listing.image.url %>" type="text">
                </div>
                <div class="row">
                    <div class="mt-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" value="<%= listing.price %>" type="number">
                    </div>
                    <div class="mt-3 col-md-4">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text">
                    </div>
                </div>
                <div class="mt-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text">
                </div>
                <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
            </div>
        </div>
    </form>